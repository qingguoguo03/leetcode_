# leetcode 交换硬币

class Solution:
    def coinChange(self, coins: List[int], amount: int) -> int:
        n = len(coins)
        import math
        dp = [math.inf for j in range(amount+1)]
        
        if not amount:
            return 0
        if not coins:
            return -1
        
        coins = sorted(coins)
        dp[0] = 0
        for i in range(0, n):
            for j in range(1, amount+1):
                if coins[i]<=j:
                    dp[j] = min(dp[j], dp[j-coins[i]]+1)
                                
        return dp[amount] if dp[amount]!=math.inf else -1    
    
    
